{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build",
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSources": true,
    "inlineSourceMap": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ]
}
